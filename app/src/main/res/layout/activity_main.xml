<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tvSearch"
        android:layout_width="341dp"
        android:layout_height="83dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/pltext_custom"
        android:drawableLeft="@drawable/vector"
        android:ems="10"
        android:hint="The place that you visit in the Future"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="104dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_custom"
        android:text="save"
        app:backgroundTint="#9C27B0"
        app:layout_constraintStart_toStartOf="@+id/tvSearch"
        app:layout_constraintTop_toBottomOf="@+id/tvSearch" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="104dp"
        android:layout_height="59dp"
        android:background="@drawable/button_custom"
        android:text="cancel"
        app:backgroundTint="#9C27B0"
        app:layout_constraintBottom_toBottomOf="@+id/btnAdd"
        app:layout_constraintEnd_toEndOf="@+id/tvSearch"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnAdd"
        app:layout_constraintTop_toTopOf="@+id/btnAdd" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_name"
        android:layout_width="408dp"
        android:layout_height="540dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>